{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rishah",
  "version": "0.2.4",
  "identifier": "com.rishah.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Rishah",
        "width": 800,
        "height": 600,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all" ,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["tldr"],
        "name": "TLDraw File",
        "role": "Editor",
        "mimeType": "application/octet-stream"
      }
    ]
  }
}
